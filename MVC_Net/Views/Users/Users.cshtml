@model List<MVC_Net.Models.User>
@{
    ViewBag.Title = "Users";
}

<h1>USERS</h1>
<h2>Count: @Model.Count()</h2>

<table style="width:100%" border="1">
    <tr>
        <th>Username</th>
        <th>Password</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Actions</th>
    </tr>

    @foreach (var user in Model)
    {
        <tr>
            <td>@user.username</td>
            <td>@user.password</td>
            <td>@user.fname</td>
            <td>@user.lname</td>
            <td>@user.email</td>
            <td><a href="@Url.Action("DeleteUser", "Users", new { userId = user.id })">Delete User</a></td>
        </tr>
    }
</table>


